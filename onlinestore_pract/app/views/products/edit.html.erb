<h3> Edit Product </h3>

<%= form_for @product do |f| %>  
  <%= f.label :name, :style => "margin-right: 10px"%>
  <%= f.text_field :name%> <br />

  <%= f.label :description, :style => "margin-right: 5px"%>
  <%= f.text_area :description %><br />

  <%= f.label :price, :style => "margin-right: 5px"%>
  <%= f.text_field :price %><br />

  <%= f.label :weight, :style => "margin-right: 5px"%>
  <%= f.text_field :weight %><br />

  <%= f.submit "Update"%>
  <%= link_to "Back", articles_path %>
  
<% end %>
