<h3> New Product </h3>

<%=form_for @product do |f|%>
   <p> 
    <%= f.label :name %>
    <%= f.text_field :name %> 
  </p>
   <p> 
    <%= f.label :description %> 
    <%= f.text_area :description %> 
  </p>
   <p> 
    <%= f.label :price %> 
    <%= f.text_field :price %> 
  </p>
   <p> 
    <%= f.label :weight %> 
    <%= f.text_field :weight %> 
  </p>
  <p class="button">
    <%= f.submit "Create"%>
    <%= link_to "Back"%>
  </p> 
<% end %>
