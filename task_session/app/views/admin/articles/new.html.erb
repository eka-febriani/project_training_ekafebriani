<h1> Create New Article</h1>

<% if @article.errors.any? %>
  <div id="errorExplanation">
    <h2>
<%= pluralize(@article.errors.count, "error") %>
    </h2>
    <ul>

<% @article.errors.full_messages.each do |msg| %>
        <li><%= msg%></li>
      <% end %>
    </ul>
  <div>
<% end %>

<%= form_for @article do |f| %>
  <%= f.label :title, :style => "margin-right: 10px"%> <br />
  <%= f.text_field :title, :style => "margin-bottom: 10px;"%> <br />

  <%= f.label :body, :style => "margin-right: 5px;"%> <br />
  <%= f.text_area :body, :style => "height: 100px; margin-bottom: 10px;"%><br />

  <%= f.submit%>
<%end%>
