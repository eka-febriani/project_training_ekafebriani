<%= flash[:notice] %>
<h2><%= @article.title %></h2>
<p style= "width: 300px"><%= @article.body %></p> <br />

<h3>Comments</h3>
<div id ="comments">
  <%= render :partial => "comments", :locals => {:comments => @comments} %>
</div><br /><br />

<% unless(current_user.nil?) %>
  <%= form_for @comment, :url => comments_path, :remote => true do |f| -%>
    <%= f.text_area :content %>
    <%= f.hidden_field :article_id, :value => @article.id %>
    <%= submit_tag "comment" %>
  <% end -%>
<% end %>

<%= link_to "Back to Article List", articles_path %>
